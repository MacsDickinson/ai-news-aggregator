# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

# Environment Configuration
environment = "development"
app_name    = "ai-news-aggregator"
aws_region  = "us-east-1"

# LocalStack Configuration (for local development)
use_localstack       = true
localstack_endpoint  = "http://localhost:4566"

# AWS Credentials (not needed for LocalStack)
# aws_access_key_id     = "your-access-key"
# aws_secret_access_key = "your-secret-key"

# DynamoDB Configuration
dynamodb_table_prefix = "ai-news-aggregator-dev"

# Resource Protection (set to true for production)
enable_point_in_time_recovery = false
enable_deletion_protection     = false