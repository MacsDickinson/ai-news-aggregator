{
  "name": "@ai-news-aggregator/backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend API server for AI News Aggregator",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/server.js",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "npx eslint src/**/*.js || echo 'No JS files to lint - TypeScript handled by type-check'",
    "type-check": "tsc --noEmit",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts"
  },
  "dependencies": {
    "@ai-news-aggregator/shared": "file:../shared",
    "@anthropic-ai/sdk": "^0.9.1",
    "@aws-sdk/client-dynamodb": "^3.460.0",
    "@aws-sdk/client-eventbridge": "^3.460.0",
    "@aws-sdk/client-opensearch": "^3.460.0",
    "@aws-sdk/client-s3": "^3.460.0",
    "@aws-sdk/client-secrets-manager": "^3.460.0",
    "aws-sdk": "^2.1516.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.56.0",
    "supertest": "^7.1.4",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
