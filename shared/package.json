{
  "name": "@ai-news-aggregator/shared",
  "version": "0.1.0",
  "private": true,
  "description": "Shared types, utilities, and validation schemas",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
